{
  "env": {
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "statusLine": {
    "type": "command",
    "command": "$HOME/.lumen/config/claude/scripts/status-line"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/lint-hook"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(bin/ci:*)",
      "Bash(bin/rails:*)",
      "Bash(bin/rspec:*)",
      "Bash(bundle exec rails initializers)",
      "Bash(bundle exec rails log:clear)",
      "Bash(bundle exec rails middleware)",
      "Bash(bundle exec rails routes)",
      "Bash(bundle exec rails tmp:clear)",
      "Bash(bundle exec rake rubocop:autocorrect)",
      "Bash(bundle exec rake rubocop)",
      "Bash(bundle exec rake spec)",
      "Bash(bundle exec rspec:*)",
      "Bash(bundle exec rubocop:*)",
      "Bash(bundle install:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(yarn install:*)"
    ],
    "deny": [
      "Edit(**/config/master.key)",
      "Edit(**/.env*)",
      "Read(**/config/master.key)",
      "Read(**/.env*)",
      "Write(**/config/master.key)",
      "Write(**/.env*)"
    ]
  },
  "spinnerTipsEnabled": false,
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": ["Working"]
  }
}
